extends layout
block content 
  h2 My Sets
  console.log(flashCardSets)
  console.log(flashCardSet)
    //Check if there are any flash card sets
    if flashCardSets.length > 0
        ul
            each set in flashCardSets
                li
                    h2 #{set.name}
                    p #{set.topic}
    else
        p You have no flash card sets.

    table(class="table table-bordered")
    thead 
      tr 
        th Title 
        th Topic 
      tbody
        each set in flashCardSets 
          tr 
            td #{set.name}
            td #{set.topic}
