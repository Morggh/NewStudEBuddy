extends layout
mixin flashCardSet(content)
  li= content 

mixin cardList(cards)
  ul 
    each card in cards
      +flashCardSet(card)

mixin box(title)
  div.box
  h2= title
  block 


block content 
.col-md-6
      h2 Text Box
      form(href ='/', method="POST")
        p Title:
        input(type='hidden', name='_csrf', value=_csrf)
        input(type="text", name="term", placeholder=" ")
        input(type="submit", class="btnNew")
        
    .col-md-6 
    +box('Testing Title4')
      +flashCardSet(['test', 'test 2'])
      +flashCardSet(['example' , 'example2'])
