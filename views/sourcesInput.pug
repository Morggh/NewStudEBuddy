extends layout
mixin flashCardSet(content)
  li= content 

mixin cardList(cards)
  ul 
    each card in cards
      +flashCardSet(card)

mixin box(title)
  div.box


block content 
    .col-md-6
      h2 Text Box
      form(href ='/', method="POST")
      p Title:
        input(type="text" name="title" placeholder=" ")
        input(type="submit")
    .col-md-6 
    +box('Testing Title')
    +flashCardSet(['test', 'test 2' , 'test 3'])
    +flashCardSet(['example1', 'example2'])